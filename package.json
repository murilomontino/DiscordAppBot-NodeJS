{
  "name": "botapp",
  "version": "0.2.0",
  "author": "Muca e Luke",
  "build": {
    "appId": "com.discord.cthulhu_app",
    "productName": "Cthulhu App",
    "copyright": "Copyright Â© 2019 BPS",
    "mac": {
      "category": "public.app-category.utilities"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "private": true,
  "homepage": "./",
  "main": "public/electron.js",
  "dependencies": {
  
    "@material-ui/core": "^4.11.0",
    "@material-ui/icons": "^4.9.1",
    "@material-ui/lab": "^4.0.0-alpha.56",
    "@unform/core": "^2.1.3",
    "@unform/web": "^2.1.3",
    "d20": "1.4.1",
    "discord.js": "12.3.1",
    "electron-store": "^6.0.0",
    "fontsource-roboto": "^3.0.3",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-router-dom": "5.2.0",
    "react-scripts": "3.4.3"

  },
  "scripts": {
    "react-start": "rescripts  start",
    "react-build": "rescripts  build",
    "test": "rescripts  test",
    "react-eject": "react-scripts eject",
    "postinstall": "electron-builder install-app-deps",
    "preelectron-build": "yarn react-build",
    "electron-build": "electron-builder",
    "electron-webpack": "electron-webpack",
    "release": "yarn react-build && electron-builder --publish=always",
    "lint": "./node_modules/.bin/eslint .",
    "nodemon": "nodemon electron ./public/electron",
    "dev": "concurrently \"cross-env BROWSER=none yarn react-start\" \"wait-on http://localhost:3000 && yarn nodemon  .\""
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "@testing-library/user-event": "^7.2.1",
    "cross-env": "^7.0.2",
    "source-map-support": "^0.5.16",
    "electron-webpack": "^2.8.2",
    "electron-builder": "^22.8.1",
    "@rescripts/cli": "^0.0.14",
    "@rescripts/rescript-env": "^0.0.12",
    "concurrently": "5.3.0",
    "electron": "10.1.0",
    "electron-is-dev": "1.2.0",
    "mocha": "^8.1.3",
    "nodemon": "^2.0.4",
    "spectron": "^11.1.0",
    "typescript": "^4.0.3",
    "wait-on": "^5.2.0"
  }
}
