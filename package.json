{
  "name": "botapp",
  "version": "0.2.0",
  "author": "Muca e Luke",
  "description": "Um novo jeito de jogar RPG e gerenciar seu bot Discord",
  "build": {
    "appId": "com.discord_cthulhu_bot.app",
    "productName": "CthulhuApp",
    "copyright": "Copyright Â© 2019 Banhistas Porcos Selvagens",
    "mac": {
      "category": "public.app-category.utilities"
    },
    "files": [
      "build/**/*",
      "lib/**/*",
      "database/**/*"
    ],
    "directories": {
      "buildResources": "src/assets/icons"
    }
  },
  "private": true,
  "homepage": "./",
  "main": "./public/electron.js",
  "dependencies": {
    "@babel/cli": "^7.11.6",
    "@material-ui/core": "^4.11.0",
    "@material-ui/icons": "^4.9.1",
    "@material-ui/lab": "^4.0.0-alpha.56",
    "@unform/core": "^2.1.3",
    "@unform/web": "^2.1.3",
    "d20": "1.4.1",
    "discord.js": "12.3.1",
    "electron-store": "^6.0.0",
    "fontsource-roboto": "^3.0.3",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-router-dom": "5.2.0",
    "react-scripts": "3.4.3",
    "source-map-support": "^0.5.19"
  },
  "scripts": {
    "start": "rescripts start",
    "build": "rescripts build",
    "compile": "babel app --out-dir lib",
    "prod": "cross-env NODE_ENV=production electron ./build/electron",
    "test": "rescripts test",
    "eject": "react-scripts eject",
    "fix": "./node_modules/.bin/eslint .  --fix",
    "dev:renderer": "cross-env BROWSER=none NODE_ENV=development yarn start",
    "dev:main": "wait-on http://localhost:3000 && yarn nodemon",
    "dev": "concurrently \"yarn dev:renderer\" \" yarn dev:main  .\"",
    "postinstall": "electron-builder install-app-deps",
    "preelectron-build": "cross-env NODE_ENV=production yarn build",
    "electron-build": "cross-env NODE_ENV=production yarn electron-builder build -w"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/node": "^7.10.5",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/preset-env": "^7.11.5",
    "@rescripts/cli": "^0.0.14",
    "@rescripts/rescript-env": "^0.0.12",
    "concurrently": "5.3.0",
    "cross-env": "^7.0.2",
    "electron": "10.1.0",
    "electron-builder": "^22.8.1",
    "electron-devtools-installer": "^3.1.1",
    "nodemon": "^2.0.4",
    "typescript": "^4.0.3",
    "wait-on": "^5.2.0"
  }
}
